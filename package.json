{
  "name": "mermaid-er-editor",
  "version": "0.1.0",
  "private": true,
  "description": "Mermaid ER Diagram Visual Editor - VSCode Extension & Web Application",
  "keywords": ["mermaid", "er-diagram", "editor", "vscode", "react"],
  "license": "MIT",
  "author": "sunagaku",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=@mermaid-er-editor/web",
    "build": "npm run build --workspaces --if-present",
    "build:core": "npm run build --workspace=@mermaid-er-editor/core",
    "build:web": "npm run build --workspace=@mermaid-er-editor/web",
    "test": "npm run test --workspaces --if-present",
    "test:watch": "npm run test:watch --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "rm -rf node_modules packages/*/node_modules packages/*/dist"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
